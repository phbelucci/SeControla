<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper_roxo_mobile"
    android:theme="@android:style/Theme.NoDisplay"
    tools:context=".login_vw">

    <ImageView
        android:id="@+id/logoLoginVwCadastro"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="31dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <FrameLayout
        android:id="@+id/frameLayout5"
        android:layout_width="350dp"
        android:layout_height="180dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoLoginVwCadastro">

        <Button
            android:id="@+id/campoEntraNomeCadastro"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/entradatextologin"
            android:text="USUÁRIO"
            android:textColor="#FAF9F9" />

        <TextView
            android:id="@+id/textNomeEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:text="Entre com seu usuário e senha"
            android:textColor="#FCFCFC" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="25dp"
            app:srcCompat="@drawable/linha" />

        <Button
            android:id="@+id/campoEntraEmailCadastro"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="30dp"
            android:background="@drawable/entradatextologin"
            android:text="senha"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnLogarVwLogin"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|center"
            android:background="@drawable/entradatextologin"
            android:text="LOGAR"
            android:textColor="#F7F6F6"
            android:onClick="chamarTelaInicio"
            />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout6"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout5">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/linha" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:text="Não tem Cadastro?"
            android:textColor="#FCFCFC" />

        <Button
            android:id="@+id/btnCadastrarVwLogin"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="30dp"
            android:background="@drawable/entradatextologin"
            android:text="Cadastrar-se"
            android:textAlignment="center"
            android:textColor="#FAF9F9"
            android:onClick="chamarTelaCadastro"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout7"
        android:layout_width="262dp"
        android:layout_height="104dp"
        android:layout_gravity="bottom|right"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout6">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Google"
            android:textColor="#FFFFFF" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="right|top"
            app:srcCompat="@drawable/facebook" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center|top"
            app:srcCompat="@drawable/google" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_gravity="center|start"
            android:layout_marginTop="20dp"
            android:text="Linkedin"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginTop="20dp"
            android:text="Facebook"
            android:textColor="#FFFFFF" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="start|top"
            app:srcCompat="@drawable/linkedin" />
    </FrameLayout>

</android.support.constraint.ConstraintLayout>